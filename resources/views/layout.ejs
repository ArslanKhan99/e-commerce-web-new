                                <li class="border-0"><a href="#" class=" border-0">FEATURES</a>
                                </li>
                                <li class="border-0"><a href="/aboutUs" class="border-0">ABOUT US</a></li>
                                <%if(isLogin){%>
                                <li class="border-0"><a href="/logout" class="border-0">LOG OUT</a></li>
                                <%}else{%>
                                    <li class="border-0"><a href="/login" class="border-0">LOG IN</a></li>
                                <%}%>
                            </ul>
                        </nav>
                    </div><!-- End .header-right -->
                </div><!-- End .container -->
            </div><!-- End .header-middle -->

            <div class="header-bottom d-none d-lg-block text-align-center position-absolute">
                <div class="container d-block text-center">
                    <div class="header-left d-block">
                        <h6 class="mb-0">CALL US NOW</h6>
