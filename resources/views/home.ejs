                            <a href="/productdetail?id=<%=popular_products[i].PID%>">
                                <img src="<%=popular_products[i].image[0].url%>" alt="product" width="400" height="400"/>
                                <img src="<%=popular_products[i].image[1].url%>" alt="product" width="400" height="400" />
                            </a>
                            <div class="btn-icon-group">
                                <button value="<%=JSON.stringify(popular_products[i])%>" class="btn-icon btn-add-cart" data-toggle="modal" data-target="#addCartModal"><i class="icon-bag"></i></button>
                            </div>

                            <div class="label-group">
                                <span class="product-label label-hot"><%=popular_products[i].label%></span>
                            </div>
                        </figure>

                        <div class="product-details">
                            <div class="category-wrap">
                                <div class="category-list">
