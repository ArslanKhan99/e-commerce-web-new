<main class="main">
    <nav aria-label="breadcrumb" class="breadcrumb-nav">
        <div class="container">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/"><i class="icon-home"></i></a></li>
                <li class="breadcrumb-item active" aria-current="page">Login</li>
            </ol>
        </div>
    </nav>

    <div class="container mb-5">
        <div class="row">
            <div class="col-md-6 login-form">
                <div class="heading">
                    <h2 class="title">Login</h2>
                    <p class="pt-3">If you have an account with us, please log in.</p>
                </div><!-- End .heading -->

                <form action="/login-user" method="post">
                    <input name="emailTxt" type="email" class="form-control" placeholder="Email Address" required>
                    <input name="passwordTxt" type="password" class="form-control" placeholder="Password" required>

                    <div class="form-footer">
                        <button name="login_btn" id="btn-login" type="submit" class="btn-login-submit btn btn-primary">LOGIN</button>
                        <a href="/forgetPassword" class="forget-pass"> Forgot your password?</a>
                    </div><!-- End .form-footer -->
                </form>
            </div><!-- End .col-md-6 -->

            <div class="col-md-6">
                <div class="heading">
                    <h2 class="title">Create An Account</h2>
                    <p>Create Your Account for Amazing Goods and Services Offered by Shoopi and It's Partners.Come and Be a Part of Us</p>
                </div><!-- End .heading -->

                <form action="/register-user" method="post">
                    <input name="firstName" type="text" class="form-control" placeholder="First Name" required>
                    <input name="middleName" type="text" class="form-control" placeholder="Middle Name" required>
                    <input name="lastName" type="text" class="form-control" placeholder="Last Name" required>

                    <h2 class="title mb-2">Login information</h2>
                    <input name="emailR" type="email" class="form-control" placeholder="Email Address" required>
                    <input name="passwordR" type="password" class="form-control" placeholder="Password" required>
                    <input name="cPasswordR" type="password" class="form-control" placeholder="Confirm Password" required>

                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" class="custom-control-input" id="newsletter-signup">
                        <label class="custom-control-label" for="newsletter-signup">Sing up our Newsletter</label>
                    </div><!-- End .custom-checkbox -->

                    <div class="form-footer">
                        <button id="btn-register" type="submit" class="btn btn-primary">Create Account</button>
                    </div><!-- End .form-footer -->
                </form>
            </div><!-- End .col-md-6 -->
        </div><!-- End .row -->
    </div><!-- End .container -->
</main><!-- End .main -->